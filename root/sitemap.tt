[%	meta.custom_wrapper = 'pages/cms-templates/wrapper1.tt';
	meta.title = 'Sitemap';
-%]

<h1>	Sitemap
</h1>

[% INCLUDE 'pages/cms-templates/menu.tt' %]

<ul>
	[% FOREACH section IN sections -%]
	<li>
		[% section.name %]
		[% IF section.cms_pages -%]
		<ul>
			[% FOREACH page IN section.cms_pages -%]
			<li>
				<a href="/pages/[% section.url_name %]/[% page.url_name %]">[% page.name %]</a>
			</li>
			[% END -%]
		</ul>
		[% END -%]
	</li>
	[% END -%]
</ul>

