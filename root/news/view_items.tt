[%	meta.custom_wrapper = 'pages/cms-templates/wrapper1.tt';
	meta.title = 'News';
	meta.menu_selected = 'News';
-%]

<h1>	News
</h1>

[% INCLUDE 'pages/cms-templates/menu.tt' %]

[% FOREACH post IN news_posts -%]
<h2>	<a href="/news/[% post.posted.year %]/[% post.posted.month %]/[% post.url_title %]">[% post.title %]</a>
</h2>
<p>		<i>[% post.posted.day %] [% post.posted.month_abbr %] [% post.posted.year %]</i>
</p>
[% post.body %]
[% END -%]

