[%	meta.custom_wrapper = 'shop/wrapper.tt';
	meta.title          = item.name;
%]
[% USE money=format('%.2f') -%]

<h3>
	View item: [% item.name %]
</h3>

<p>
	Item ID: [% item.id %]
</p>
<p>
	Item name: [% item.name %]
</p>
<p>
	Description: [% item.description %]
</p>
<p>
	Price: Â£[% money( item.price / 100 ) %]
</p>
<p>
	<a href="[% c.uri_for( 'images/original/' _ item.image ) %]"><img src="[% c.uri_for( 'images/display/' _ item.image ) %]" alt="Image of [% item.name %]" title="Click to enlarge" /></a>
</p>
<p>
	[% item.paypal_button %]
</p>

