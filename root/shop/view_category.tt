[%-	meta.wrapper = 'shop/wrapper.tt';
	meta.title   = category.name;
%]

<h3>
	View Category: [% category.name | html %]
</h3>

[%- FOREACH item IN category.items %]
<p>
	<a href="[% c.uri_for( 'item/' _ item.code ) | url %]"><img src="[% c.uri_for( 'images/thumbnails/' _ item.image ) %]" alt="Image of [% item.name | html %]" title="Click to enlarge" /></a>
</p>
<p>
	<a href="[% c.uri_for( 'item/' _ item.code ) %]">[% item.name | html %]</a>
</p>
<p>
	[% item.paypal_button %]
</p>
[%- END %]

